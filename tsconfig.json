{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/public/js",
    "baseUrl": ".",
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "es2020",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@oracle/oraclejet/dist/types",
      "./node_modules/@types"
    ],
    "paths": {
      "ojs/*": [
        "./node_modules/@oracle/oraclejet/dist/types/*"
      ],
      "@oracle/oraclejet-preact/*": [
        "./node_modules/@oracle/oraclejet/dist/js/libs/oraclejet-preact/types/*"
      ],
      "oj-c/*": [
        "./node_modules/@oracle/oraclejet-core-pack/oj-c/types/*"
      ],
      "preact": [
        "./node_modules/@oracle/oraclejet/dist/js/libs/preact"
      ],
      "apps-config/*": [
        "./src/components/apps-config/*"
      ],
      "apps-footer/*": [
        "./src/components/apps-footer/*"
      ],
      "apps-header/*": [
        "./src/components/apps-header/*"
      ],
      "apps-content/*": [
        "./src/components/apps-content/*"
      ],
      "apps-menus/*": [
        "./src/components/apps-menus/*"
      ],
      "apps-login-page/*": [
        "./src/components/apps-login-page/*"
      ],
      "tools-model/*": [
        "./src/components/tools-model/*"
      ]
    },
    "declaration": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}